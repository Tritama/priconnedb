                        if(search_chara_list[items[i].chara1_id]+search_chara_list[items[i].chara2_id]+search_chara_list[items[i].chara3_id]
                        +search_chara_list[items[i].chara4_id]+search_chara_list[items[i].chara5_id]<=3){continue;}

